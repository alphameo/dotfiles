{
    "style": "~/.config/waybar/style.css",
    "layer": "top",
    "position": "top",
    "margin-top": 4,
    "margin-left": 4,
    "margin-right": 4,
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window",
    ],
    "modules-center": [
        "clock",
    ],
    "modules-right": [
        "tray",
        "hyprland/language",
        "group/group-controls",
        "group/group-battery",
        "group/group-power",
    ],
    "group/group-controls": {
        "orientation": "inherit",
        "modules": [
            "network",
            "bluetooth",
            "custom/notifications",
            "group/group-audioout",
            "group/group-audioin",
            "group/group-backlight",
        ]
    },
    "group/group-audioout": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "battery-nodes",
            "transition-left-to-right": true,
        },
        "modules": [
            "wireplumber#sinkicon",
            "pulseaudio/slider",
            "wireplumber#sinkpercentage",
        ]
    },
    "group/group-audioin": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "battery-nodes",
            "transition-left-to-right": true
        },
        "modules": [
            "wireplumber#sourceicon",
            "wireplumber#sourcepercentage",
        ]
    },
    "group/group-backlight": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "battery-nodes",
            "transition-left-to-right": true
        },
        "modules": [
            "backlight#icon",
            "backlight/slider",
            "backlight#percentage",
        ]
    },
    "group/group-battery": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "battery-nodes",
            "transition-left-to-right": true
        },
        "modules": [
            "battery",
            "power-profiles-daemon",
            "custom/screenlock",
        ]
    },
    "group/group-power": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-power",
            "transition-left-to-right": false
        },
        "modules": [
            "custom/powermenu",
            "custom/poweroff",
            "custom/reboot",
            "custom/suspend",
            // "custom/hibernate",
            "custom/logout",
            "custom/lock",
        ]
    },
    "hyprland/workspaces": {
        // "format": "{name}{icon}{windows}",
        "format": "{name}",
        "format-window-separator": " ",
        "window-rewrite-default": "Û∞£Ü",
        "window-rewrite": {
            "class<(firefox)>": "Û∞àπ",
            "class<(code)>": "Û∞®û",
            "class<(kitty)>": "Û∞Üç",
            "class<(obsidian)>": "Û∞†Æ",
            "class<(.*telegram.*|.*materialgram)>": "ÔãÜ",
            "class<(steam)>": "Û∞ìì",
            "class<(discord|vesktop)>": "Û∞ôØ",
            "class<(nekobox)>": "Û∞ñÇ",
            "class<(opentabletdriver.*)>": "Û∞è¨",
            "class<(spotify)>": "Û∞ìá",
            "class<(gamescope)>": "Û∞∫µ",
            "class<(.*obsproject.*)>": "Û∞ªÇ"
        },
        "format-icons": {
            "default": "ÔÑå",
            "active": "ÔÜí",
            "urgent": "ÔÅ™",
            "magic": "Óãä",
        },
        "all-outputs": false,
        "disable-scroll": true,
        "show-special": true,
        "special-visible-only": true,
    },
    "hyprland/window": {
        "format": "{}",
        "separate-outputs": true,
        "icon": true
    },
    "tray": {
        "icon-size": 17,
        "spacing": 6
    },
    "clock": {
        "format": "<span color='#cba6f7'>Û∞•î</span> {:%H:%M <small>(%a, %d.%m.%Y)</small>}",
        "interval": 60,
        "tooltip-format": "<small>Today:</small> {:%d.%m.%Y}\n<tt><small>{calendar}</small></tt>\n\n<small>LMB - reset day\nRMB - year\nMS - change month</small>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "format": {
                "months": "<span color='#cdd6f4'><b>{}</b></span>",
                "days": "<span color='#cdd6f4'><b>{}</b></span>",
                "weeks": "<span color='#6c7086'><b>W{}</b></span>",
                "weekdays": "<span color='#89b4fa'><b>{}</b></span>",
                "today": "<span color='#fab387'><b><u>{}</u></b></span>"
            }
        },
        "smooth-scrolling-threshold": 5,
        "actions": {
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down",
            "on-click": "shift_reset",
            "on-click-right": "mode"
        }
    },
    "hyprland/language": {
        "format": "{}",
        "format-en": "en",
        "format-ru": "ru",
        // "format-en": "üá∫üá∏",
        // "format-ru": "üá∑üá∫",
        "on-click": "~/.scripts/switch-kb-layout.sh"
    },
    "network": {
        "format-disabled": "Û∞™é",
        "format-disconnected": "Ôá´",
        "format-wifi": "Ôá´ {essid}",
        "format-ethernet": "Û∞≤ù",
        "format-linked": "Û±òñ",
        "interval": 2,
        // "format-icons": [ "Û∞§Ø", "Û∞§ü", "Û∞§¢", "Û∞§•", "Û∞§®" ],
        "format-icons": [
            "<span color='#f38ba8'>Û∞¢ø</span>",
            "<span color='#fab387'>Û∞¢º</span>",
            "<span color='#cdd6f4'>Û∞¢Ω</span>",
            "<span color='#cdd6f4'>Û∞¢æ</span>"
        ],
        "tooltip-format": "{icon}({signalStrength}%)  {essid}  <span color='#eba0ac'>Û∞Öß</span> {bandwidthUpBytes} <span color='#89dceb'>Û∞Ö¢</span> {bandwidthDownBytes}\n({ifname} via {gwaddr})\n\n<small>LMB - menu</small>",
        "tooltip-format-disconnected": "Disconnected\n\n<small>LMB - menu</small>",
        "tooltip-format-disabled": "Disabled\n\n<small>LMB - menu</small>",
        "on-click": "~/.scripts/open-network-manager.sh",
    },
    "bluetooth": {
        "format-disabled": "Û∞Ç≤",
        "format-off": "Û∞Ç≤",
        "format-on": "Û∞ÇØ",
        "format-connected": "Û∞Ç±",
        "format-connected-battery": "Û∞•â {device_battery_percentage}%",
        "tooltip-format": "{controller_alias} ({controller_address})\n\nConnected devices: {num_connections}\n\nLMB - menu",
        "tooltip-format-connected": "{controller_alias} ({controller_address})\n\nConnected devices:\n{device_enumerate}\n\nLMB - menu",
        "tooltip-format-enumerate-connected": "Ôäì  {device_alias} ({device_address})",
        "tooltip-format-enumerate-connected-battery": "Ôäì  {device_alias} ({device_address})\tÛ∞•â {device_battery_percentage}%",
        "on-click": "~/.scripts/open-bluetooth-manager.sh",
    },
    "wireplumber#sinkicon": {
        "node-type": "Audio/Sink",
        "format": "{icon}",
        "format-muted": "<span color='#f38ba8'>Û∞∏à</span>",
        // "format-source": "Û∞ç¨",
        // "format-source-muted": "<span color='#f38ba8'>Û∞ç≠</span>",
        "format-icons": [
            "Û∞ïø",
            "Û∞ñÄ",
            "Û∞ïæ"
        ],
        "tooltip-format": "Volume: {volume}%\nSink: {source_desc}\n\nSM - control\nLMB - mute\nRMB - settings",
        "reverse-scrolling": true,
        "reverse-mouse-scrolling": true,
        "on-click": "~/.scripts/toggle-mute-sink.sh",
        "on-click-right": "~/.scripts/open-sound-sink-manager.sh",
    },
    "wireplumber#sinkpercentage": {
        "node-type": "Audio/Sink",
        "format": "{volume}%",
        "format-muted": "<span color='#f38ba8'>{volume}%</span>",
        "tooltip-format": "Volume: {volume}%\nSink: {source_desc}\n\nSM - control\nLMB - mute\nRMB - settings",
        "reverse-scrolling": true,
        "reverse-mouse-scrolling": true,
        "on-click": "~/.scripts/toggle-mute-sink.sh",
        "on-click-right": "~/.scripts/open-sound-sink-manager.sh",
    },
    "wireplumber#sourceicon": {
        "node-type": "Audio/Source",
        "format": "Û∞ç¨",
        "format-muted": "<span color='#f38ba8'>Û∞ç≠</span>",
        "tooltip-format": "Volume: {volume}%\nSource: {source_desc}\n\nSM - control\nLMB - mute\nRMB - settings",
        "reverse-scrolling": true,
        "reverse-mouse-scrolling": true,
        "on-click": "~/.scripts/toggle-mute-source.sh",
        "on-click-right": "~/.scripts/open-sound-source-manager.sh",
    },
    "wireplumber#sourcepercentage": {
        "node-type": "Audio/Source",
        "format": "{volume}%",
        "format-muted": "<span color='#f38ba8'>{volume}%</span>",
        "tooltip-format": "Volume: {volume}%\nSource: {source_desc}\n\nSM - control\nLMB - mute\nRMB - settings",
        "reverse-scrolling": true,
        "reverse-mouse-scrolling": true,
        "on-click": "~/.scripts/toggle-mute-source.sh",
        "on-click-right": "~/.scripts/open-sound-source-manager.sh",
    },
    "pulseaudio/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal"
    },
    "backlight#icon": {
        "format": "{icon}",
        "format-icons": [
            "Û∞Éû",
            "Û∞Éù",
            "Û∞Éü",
            "Û∞É†"
        ],
        "on-scroll-up": "~/.scripts/brightness-increase.sh",
        "on-scroll-down": "~/.scripts/brightness-decrease.sh",
        "reverse-scrolling": true,
        "tooltip-format": "Backlight\n\nSM - control"
    },
    "backlight#percentage": {
        "format": "<span color='#fab387'>{percent}%</span>",
        "on-scroll-up": "~/.scripts/brightness-increase.sh",
        "on-scroll-down": "~/.scripts/brightness-decrease.sh",
        "reverse-scrolling": true,
        "tooltip-format": "Backlight\n\nSM - control"
    },
    "backlight/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal",
    },
    "battery": {
        "states": {
            "warning": 19,
            "critical": 10
        },
        "format": "{icon} {capacity}%",
        // "format-icons": ["Û∞Çé ", "Û∞Åº ", "Û∞Åø ", "Û∞ÇÅ ", "Û∞Åπ "],
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ],
        "format-charging": "Û±êã {capacity}%",
        "format-warning": "ÔâÑ {capacity}%",
        "format-critical": "ÔâÑ {capacity}%",
        "interval": 1
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        },
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}\n\nLMB/RMB - toggle"
    },
    "custom/notifications": {
        // "exec": "~/.config/waybar/scripts/dunst.sh",
        // "restart-interval": 1,
        // "tooltip-format": "Notifications\n\n<small>LMB - pause notifications\nRMB - history</small>",
        // "on-click": "dunstctl set-paused toggle",
        // "on-click-right": "dunstctl history-pop",
        "tooltip": true,
        "format": "{icon}{0}",
        "format-icons": {
            "notification": "<span color='#f9e2af'>Û±Ö´</span>",
            "none": "<span color='#f9e2af'>Û∞Çú</span>",
            "dnd-notification": "<span color='#f38ba8'>Û∞Ç†</span>",
            "dnd-none": "<span color='#f38ba8'>Û∞™ì</span>",
            "inhibited-notification": "<span color='#f38ba8'>Û∞Çõ</span>",
            "inhibited-none": "<span color='#f38ba8'>Û∞™ë</span>",
            "dnd-inhibited-notification": "<span color='#f38ba8'>Û∞Çõ</span>",
            "dnd-inhibited-none": "<span color='#f38ba8'>Û∞™ë</span>"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "~/.scripts/open-notification-manager.sh",
        "on-click-right": "~/.scripts/toggle-notification-dnd.sh",
        "escape": true
    },
    "custom/screenlock": {
        "exec": "~/.config/waybar/scripts/hypridle.sh check",
        "restart-interval": 1,
        "tooltip-format": "Screenlock\n\n<small>LMB - pause screenlocking</small>",
        "on-click": "~/.config/waybar/scripts/hypridle.sh toggle"
    },
    "custom/powermenu": {
        "format": "Û∞ê¶",
        "tooltip-format": "Power menu\n\n<small>LMB/M-C-p - open</small>",
        "on-click": "~/.scripts/open-power-menu.sh"
    },
    "custom/poweroff": {
        "format": "ÔÄë",
        "tooltip-format": "Poweroff",
        "on-click": "~/.scripts/poweroff.sh"
    },
    "custom/reboot": {
        "format": "Û∞úâ",
        "tooltip-format": "Reboot",
        "on-click": "~/.scripts/reboot.sh"
    },
    "custom/logout": {
        "format": "Û∞çÉ",
        "tooltip-format": "Logout",
        "on-click": "~/.scripts/logout.sh"
    },
    "custom/lock": {
        "format": "Û∞çÅ",
        "tooltip-format": "Lock",
        "on-click": "~/.scripts/lock.sh"
    },
    "custom/suspend": {
        "format": "ÔÜÜ",
        "tooltip-format": "Sleep",
        "on-click": "~/.scripts/suspend.sh"
    },
    // "custom/hibernate": {
