{
    "layer": "bottom",
    "position": "top",
    "margin-top": 8,
    "margin-left": 4,
    "margin-right": 4,
    "modules-left": [
        "hyprland/workspaces"
        // "hyprland/window"
    ],
    "modules-center": [
        "clock",
        "hyprland/language",
        "keyboard-state"
    ],
    "modules-right": [
        "network",
        "bluetooth",
        "pulseaudio",
        "cava",
        "backlight",
        "battery",
        "power-profiles-daemon",
        "tray",
        // "custom/lock",
        // "custom/reboot",
        // "custom/power",
        "custom/powermenu"
    ],
    "hyprland/workspaces": {
        "format": "{name}{icon}{windows}",
        "format-window-separator": " ",
        "window-rewrite-default": "󰣆",
        "window-rewrite": {
            "class<(firefox)>": "󰈹",
            "class<firefox> title<.*github.*>": "",
            "class<(code)>": "󰨞",
            "class<(kitty)>": "󰆍",
            "class<(obsidian)>": "󰠮",
            "class<(.*telegram.*|.*materialgram)>": "",
            "class<(element|signal)>": "󰍩",
            "class<(rofi|albert)>": "󰮫",
            "class<(steam)>": "󰓓",
            "class<(discord|vesktop)>": "󰙯",
            "class<(nekobox)>": "󰖂",
            "class<(opentabletdriver.*)>": "󰏬",
            "class<(spotify)>": "󰓇",
            "class<(gamescope)>": "󰺵",
            "class<(.*obsproject.*)>": "󰻂"
        },
        "format-icons": {
            "default": " ",
            "special": " ",
            "empty": ""
        },
        "on-scroll-up": "hyprctl dispatch workspace m+1",
        "on-scroll-down": "hyprctl dispatch workspace m-1",
        "show-special": true
    },
    "hyprland/window": {
        "format": "{}",
        "separate-outputs": true,
        "icon": false,
        "on-click": "hyprctl dispatch exec $TERMINAL",
        "on-click-right": "hyprctl dispatch killactive"
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": {
            "numlock": "N {icon}",
            "capslock": "C {icon}"
        },
        "format-icons": {
            "locked": "",
            "unlocked": ""
        }
    },
    "clock": {
        "format": "<span color='#BF00FF'></span> {:%H:%M}",
        "interval": 60,
        "format-alt": "<span color='#BF00FF'>󰥔</span> {:%A, %d %B, %Y (%R)}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#f5e0dc'><b>{}</b></span>",
                "days": "<span color='#cdd6f4'><b>{}</b></span>",
                "weeks": "<span color='#94e2d5'><b>W{}</b></span>",
                "weekdays": "<span color='#fab387'><b>{}</b></span>",
                "today": "<span color='#eba0ac'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            // "on-scroll-up": "tz_up",
            // "on-scroll-down": "tz_down",
            // "on-scroll-up": "shift_up",
            // "on-scroll-down": "shift_down",
            "on-click-right": "mode"
        }
    },
    "hyprland/language": {
        "format": "{}",
        "format-en": "EN",
        "format-ru": "RU",
        "on-click": "hyprctl switchxkblayout at-translated-set-2-keyboard next"
    },
    "network": {
        "format": "<span color='#cdd6f4'>󰪎</span> ",
        "format-wifi": "<span color='#74c7ec'></span> ",
        "format-ethernet": "<span color='#74c7ec'>󰲝</span> ",
        "format-linked": "<span color='#f38ba8'>󱘖</span>{ifname}  (No IP) ",
        "format-disconnected": "<span color='#cdd6f4'>󰪎</span> ",
        "interval": 2,
        // "format-icons": [ "󰤯", "󰤟", "󰤢", "󰤥", "󰤨" ],
        "format-icons": [
            "<span color='#f38ba8'>󰢿</span>",
            "<span color='#cdd6f4'>󰢼</span>",
            "<span color='#cdd6f4'>󰢽</span>",
            "<span color='#cdd6f4'>󰢾</span>"
        ],
        "tooltip-format": "{icon} ({signalStrength}%)  {essid} <span color='#eba0ac'>󰅧</span>  {bandwidthUpBytes} <span color='#89dceb'>󰅢</span>  {bandwidthDownBytes}\n({ifname} via {gwaddr})",
        "tooltip-format-disconnected": "Disconnected",
        "on-click": "$HOME/.config/rofi/modules/rofi-wifi-menu/rofi-wifi-menu.sh"
        // "on-click": "rofi-wifi-menu"
        // "on-click": "iwgtk"
    },
    "bluetooth": {
        "format": "󰂯",
        "format-disabled": "󰂲",
        "format-connected": "<span color='#89dceb'>󰂱</span>",
        "format-connected-battery": "<span color='#89dceb'>󰂱</span> 󰥉 {device_battery_percentage}%",
        "tooltip-format": "{controller_alias} ({controller_address})\n\nConnected devices: {num_connections}",
        "tooltip-format-connected": "{controller_alias} ({controller_address})\n\nConnected devices:\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "  {device_alias} ({device_address})",
        "tooltip-format-enumerate-connected-battery": "  {device_alias} ({device_address})\t󰥉 {device_battery_percentage}%",
        "on-click": "$HOME/.config/rofi/modules/rofi-bluetooth.sh"
        // "on-click": "rofi-bluetooth"
        // "on-click": "blueberry"
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "<span color='#f38ba8'>󰖁</span> 0%",
        "format-icons": {
            "headphone": "<span color='#cba6f7'></span>",
            "hands-free": "<span color='#cba6f7'></span>",
            "headset": "<span color='#cba6f7'></span>",
            "phone": "<span color='#89dceb'></span>",
            "portable": "<span color='#89dceb'></span>",
            "car": "<span color='#fab387'></span>",
            "default": [
                "<span color='#f5e0dc'></span>",
                "<span color='#f9e2af'></span>",
                "<span color='#a6e3a1'></span>"
            ]
        },
        "on-click-right": "pavucontrol -t 3",
        "on-click": "pactl -- set-sink-mute 0 toggle",
        "tooltip": true,
        "tooltip-format": "Volume: {volume}%",
        "reverse-scrolling": true
    },
    "backlight": {
        "format": "{icon} {percent}%",
        "format-icons": [
            "<span color='#6c7086'>󰃞</span>",
            "<span color='#bac2de'>󰃝</span>",
            "<span color='#f9e2af'>󰃟</span>",
            "<span color='#fab387'>󰃠</span>"
        ],
        "reverse-scrolling": true,
        "tooltip": false
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        // "format-icons": ["󰂎", "󰁼", "󰁿", "󰂁", "󰁹"],
        "format-icons": [
            "<span color='#f38ba8'></span>",
            "<span color='#a6e3a1'></span>",
            "<span color='#a6e3a1'></span>",
            "<span color='#a6e3a1'></span>",
            "<span color='#a6e3a1'></span>"
        ],
        "format-charging": "󱐋 {capacity}%",
        "interval": 1,
        "tooltip": true
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "format-icons": {
            "default": "",
            "performance": "<span color='#f38ba8'></span>",
            "balanced": "<span color='#f9e2af'></span>",
            "power-saver": "<span color='#a6e3a1'></span>"
        },
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true
    },
    "custom/lock": {
        "format": "<span color='#cdd6f4'></span>",
        "tooltip": false,
        "on-click": "hyprlock"
    },
    "custom/reboot": {
        "format": "<span color='#f9e2af'></span>",
        "tooltip": false,
        "on-click": "systemctl reboot"
    },
    "custom/power": {
        "format": "<span color='#f38ba8'></span>",
        "tooltip": false,
        "on-click": "systemctl poweroff"
    },
    "custom/powermenu": {
        "format": "⭘",
        "tooltip": true,
        "tooltip-format": "Power menu",
        "on-click": "rofi -show power-menu -modi power-menu:$HOME/.config/rofi/modules/rofi-power-menu.sh"
    },
    "cava": {
        "framerate": 144,
        "autosens": 1,
        "sensitivity": 3,
        "bars": 24,
        "lower_cutoff_freq": 60,
        "higher_cutoff_freq": 20000,
        "method": "pipewire",
        "source": "auto",
        "stereo": false,
        "reverse": false,
        "bar_delimiter": 0,
        "monstercat": false,
        "waves": false,
        "noise_reduction": 0.77,
        "input_delay": 2,
        "format-icons": [
            "▁",
            "▂",
            "▃",
            "▄",
            "▅",
            "▆",
            "▇"
        ],
        "hide_on_silence": true,
        "sleep_timer": 4
    },
    "tray": {
        "icon-size": 17,
        "spacing": 6
    }
}
