@import "../theme.rasi"

* {
    background-color:       @bg-col;
    text-color:             @fg-col;
    font: "RobotoMono Nerd Font Propo 12";
}

window {
    width:      			360px;
    padding:    			25px;
    border:					1px;
    border-radius:          12px;
    border-color:           @border-col;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@border-col;
}
